<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ei8.Cortex.Gps.Sender.ViewModels.Auth"
             x:DataType="viewmodel:LoginViewModel"
             x:Class="ei8.Cortex.Gps.Sender.Views.Auth.LoginPage">
    
    <ScrollView>
        <VerticalStackLayout Margin="20">
            <Image Source="logo.png" HeightRequest="80"/>

            <VerticalStackLayout Margin="0,50">
                <Label FontSize="32"
                       HorizontalTextAlignment="Center"
                       Text="Welcome"/>
                <Label TextColor="{StaticResource Secondary}" 
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       Text="Please login to continue"/>
            </VerticalStackLayout>
            
            <Label Margin="10,20,10,20" 
                HorizontalOptions="Center" TextColor="{StaticResource Primary}" 
                       FontSize="20" Text="Login to IdentityServer"/>

            <Button Margin="100,20,100,20" 
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    BackgroundColor="{StaticResource Secondary}"
                    Text="Login" TextColor="{StaticResource Primary}"/>

        </VerticalStackLayout>
        </ScrollView>
    
</ContentPage>
